{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".cache/tsbuildinfo.json", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "format":{
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "type-check": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "AUTH_SECRET",
    "AUTH_TRUST_HOST",
    "AUTH_URL",
    "BLUESKY_HTTPSERVER_URL",
    "PORT",
    "NEXT_PUBLIC_BASE_PATH"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "COOLIFY_URL",
    "npm_lifecycle_event"
  ]
}
